# Base de datos
DB_NAME=tu_base_de_datos
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña_segura
DB_HOST=localhost
DB_PORT=3306

# Servidor
PORT=3001
NODE_ENV=development

# JWT Secret - DEBE ser una clave muy segura en producción
JWT_SECRET=tu_clave_jwt_muy_segura_y_larga

# Google OAuth
VITE_GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# Frontend URL
FRONTEND_URL=http://localhost:5173

# IMPORTANTE: 
# - Nunca subas el archivo .env real al repositorio
# - Usa contraseñas seguras en producción
# - Cambia JWT_SECRET por una clave aleatoria y segura
# - En producción, usa HTTPS y configura NODE_ENV=production